<strong><%= comment.author.name %></strong><br>
<%= comment.body %><br>

<%= link_to "respond", 
						  new_link_comment_url(link, :parent_id => comment.id) %>

<% if current_user.is_author?(comment) %>
	<%= link_to "edit", edit_link_comment_url(link) %>
<% end %>

<% if current_user.is_mod?(link) || current_user.is_author?(comment) %>
	<%= link_to "delete", link_url, :method => :delete %>
<% end %>
<ul>
	<% comments_by_parent_id[comment.id].each do |cmt| %>
		<li>
			<%= render :partial => "comment", 
							:locals => {:link => link,
												  :comment => cmt,
													:comments_by_parent_id => comments_by_parent_id} %>
		</li>
	<% end %>
</ul>






